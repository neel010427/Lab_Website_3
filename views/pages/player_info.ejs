<% include ../partials/header %>
<% include ../partials/menu %>
	<div class="container">
		<br>
		<div class="row">
			<div class="col-4">
				<div class="card">
				<!-- TODO: Modify the ejs code below, to conditionally set the image_src to be from our chosen player -->
				  <%
				  var image_src = '../resources/img/helmet.jpg';
					if(result_1){
						image_src = result_1.img_src;%>
				<%}%>
				 <img class="card-img-top" id="player_img" src= "<%- image_src %>" alt="Image of Football Player">
				  <div class="card-body mx-auto">
					<form class="form"action="/player_info/select_player" method="get">
						<select class="custom-select" name="player_choice" onchange="this.form.submit()">
							 <option selected>Select Player</option>
							 <!-- TODO: Populate our select with player options
							 			For each player, set a new option with a value matching the palyer's id,
							 			but will display the player's name-->
								<%
								if(data){
									var options = '';
									data.forEach(function(item){
										options += '<option value="' + item.id + '">' + item.name + '</option>';
									});%>
									<%- options %>
								<%}%>
						</select>
					</form>
				  </div>
				</div>
			</div>
			<div class="col-8">
				<div class="table-responsive">
					<table class="table">
						<tr>
							<!-- TODO: Set Player Information
							 			If a player has been selected, fill in their information in each of the fields below.
							 		    You'll need to calculate here the player's average rushing, receiving, and passing yards.-->
							<th>Year</th>
							<td> <%- result_1.year %>	</td>
						</tr>
						<tr>
							<th>Major</th>
							<td> <%- result_1.major %>	</td>
						</tr>
						<tr>
							<th>Games Played</th>
							<td>  <%- result_2 %>	</td>
						</tr>
						<tr>
							<td>Passing Yards: <%- result_1.passing_yards %> </td>
							<td>Avg. Passing Yards: <%- (result_1.passing_yards/result_2).toFixed(2) %> </td>
						</tr>
						<tr>
							<td>Rushing Yards: <%- result_1.rushing_yards %> </td>
							<td>Avg. Rushing Yards: <%- (result_1.rushing_yards/result_2).toFixed(2) %></td>
						</tr>
						<tr>
							<td>Receiving Yards: <%- result_1.receiving_yards %> </td>
							<td>Avg. Receiving Yards: <%- (result_1.receiving_yards/result_2).toFixed(2) %> </td>
						</tr>


					</table>
				</div>
			</div>
		</div>
	</div>

<% include ../partials/footer %>
